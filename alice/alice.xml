<context>

    <sample>
        <item value="Кто такая Алиса"/>
        <item value="Сыграем в Рок-викторину!"/>
    </sample>

    <input pattern="* (привет*|здравствуй*) *">
        <output if="full($UserName)">
            <item value="Привет, $UserName! Рада снова видеть тебя!"/>
            <item value="Здравствуй, $UserName! Я уже успела соскучиться..."/>
        </output>

        <context if="empty($UserName)" id="name">
            <output value="Привет! Меня зовут Алиса! А как тебя зовут?"/>

            <input pattern="$Text">
                <var name="UserName" value="cap($Text)" scope="user"/>
                <output value="Приятно познакомиться, $UserName! Сыграем в Рок-викторину?"/>
                <context/>
            </input>
        </context>
    </input>
    
    <input pattern="* пока *">
        <var name="end_session" value="javascript: true"/>
        <output value="Ну пока, незнакомец!" if="empty($UserName)"/>
        <output value="Пока-пока, $UserName!"/>
    </input>

   
   

    
    <input pattern="*Сыграем в Рок-викторину*">
      <context id="start">
        <output value="Отлично приступим! Настоящее имя этого исполнителя - Vincent Damon Furnier, но миллионам своих поклонников он известен как ..."/>
        
       <sample>
        <item value="Ozzy Osbourne"/>
        <item value="Slash"/>
        <item value="Alice Cooper"/>
      </sample>
      
        <input pattern="Alice Cooper">
        <output value="Да ты молодец!"/>
        </input>
        
        <input pattern="(Ozzy Osbourne|Slash)">
        <output value="Ну ты даешь! Это же Alice Cooper!"/>
        </input>    
      </context>
    </input>
       
    
    

</context>
